<h1>電子マネーが使えるお店探し！</h1>
<%= form_with(url: shops_path, local: true, method: :get) do |f| %>
  <%= f.label :都道府県 %>
  <%= f.select :pref_code, options_for_select(@prefs.map{ |pref| [pref["pref_name"], pref["pref_code"]]}) %><br />
  <%= f.submit '検索' %>
<% end %>

<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag '/assets/home/japan.jpg', alt: '日本地図' %>
      </div>
    </div>
  </div>
</div>
