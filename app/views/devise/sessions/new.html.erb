<div class="login__wrapper">
  <div class="login__container">
    <h4>ログイン</h4>
    <%= image_tag '/assets/login/woman.jpg', alt: 'スマホを持っている女性' %>
    <div class="form">
      <%= form_for(resource, as: resource_name, url: login_path(resource_name)) do |f| %>
        <div class="form__input-area">
          <div class="form__label">
            <%= f.label 'メールアドレス' %>
          </div>
          <%= f.email_field :email, class: 'form__input', placeholder: "メールアドレス" %>
        </div>

        <div class="form__input-area">
          <div class="form__label">
            <%= f.label 'パスワード' %>
          </div>
            <%= f.password_field :password, class: 'form__input', placeholder: "パスワード" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :パスワードを記憶する %>
          </div>
        <% end %>

        <div class="form__btn-area">
          <%= f.submit "ログイン", class: 'form__btn' %>
        </div>
      <% end %>

      <h5 class="reset-password-link">
        パスワードを忘れた方は<%= link_to 'こちら', new_user_password_path %>
      </h5>

      <h5 class="reset-password-link">
        登録が済んでいない方はこちら
      </h5>
    </div>
  </div>
</div>
