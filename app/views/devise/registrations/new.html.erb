<div class="register__wrapper">
  <div class="register__container">

    <h4>無料会員登録</h4>
    <%= image_tag '/assets/register/man_and_woman.jpg', alt: 'キッチンに立っている男女' %>
    <div class="form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form__input-area">
          <div class="form__label">
            <%= f.label 'メールアドレス' %>
          </div>
          <%= f.email_field :email, class: 'form__input', placeholder: "メールアドレス" %>
        </div>

        <div class="form__input-area">
          <div class="form__label">
            <%= f.label 'パスワード' %>
          </div>
            <%= f.password_field :password, class: 'form__input', placeholder: "パスワード" %>
        </div>

        <div class="form__input-area">
          <div class="form__label">
            <%= f.label 'パスワード（確認）' %>
          </div>
            <%= f.password_field :password_confirmation, class: 'form__input', placeholder: "確認のため、再度パスワードを入力してください" %>
        </div>

        <div class="form__btn-area">
          <%= f.submit "無料会員登録", class: 'form__btn' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
